<!-- Modal -->
<%= search_form_for @search do |f| %>
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Search</h4>
      </div>
      <div class="modal-body">
        <p class="search-form">
          <%= f.label :country_eq, "タイトル検索" %>
          <%= f.text_field :country_eq, class: "form-control", placeholder: "国名" %>
        </p>
     <!--  </div> -->
     <!--  <div class="modal-body"> -->
        <p class="search-form">
          <%= f.label :region_cont, "地域で検索" %>
          <%= f.text_field :region_cont, class: "form-control", placeholder: "地域名" %>
        </p>
      <!-- </div> -->
      <!-- <div class="modal-body"> -->
        <p class="search-form">
          <%= f.label :price_lt, "予算で検索" %>
          <%= f.text_field :price_lt, class: "form-control", placeholder: "￥" %>
        </p>
      </div>
      <div class="modal-footer">
        <!-- <p class="search-btn"> -->
          <%= f.submit '検索', class: "btn btn-primary" %>
          <%= link_to 'クリア', url_for, class: "btn btn-default" %>
        <!-- </p> -->
      </div>
    </div>

  </div>
</div>
<% end %>



<!-- 一覧セクション -->
<div class="paginate"><%= paginate @articles %></div>
<div class="container col-md-12">
      <% @articles.each do |article| %>
         <div class="thumbnail col-lg-3 index_thumbnail">
		       <%= link_to article_path(article.id) do %>
		        <%= image_tag article.image, class: "img", :alt => 'Lights', :width => '100%' %>
			       <% end %>
                <div class="caption">
                  <p class="index-title"> 
                   <%= link_to article.title, article_path(article.id), class: "index-title vh"%>
                  </p>
		              <div class="index-sub-title">
                    <button class="btn warning"><%= link_to "さらに表示", article_path(article.id), class: "index-sub-title" %></button>
                    <i class="fa fa-heart"></i>
                    <%= article.likes.count %>
                  </div> 
                </div>
          </div>
      <% end %>
  </div>
 </div>

