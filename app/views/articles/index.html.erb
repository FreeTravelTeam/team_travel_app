<%= render 'header' %>
<!-- 検索フォーム --><!-- Trigger the modal with a button -->


<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-search"></span></button>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Search</h4>
      </div>
      <%= form_tag(search_path, method: :get) do %>
      <div class="modal-body">
        <p class="search-form">
          タイトル検索<br>
          <%= text_field_tag :title %>
        </p>
      </div>
      <div class="modal-body">
        <p class="search-form">
          国で検索<br>
          <%= text_field_tag :country %>
        </p>
      </div>
      <div class="modal-body">
        <p class="search-form">
          予算で検索<br>
          <%= text_field_tag :price %>
        </p>
      </div>
      <div class="modal-footer">
        <p class="search-btn">
          <%= submit_tag '検索', class: "btn btn-default" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>

<!-- 一覧セクション -->
<div class="paginate"><%= paginate @articles %></div>
<div class="container col-md-12">
      <% @articles.each do |article| %>
         <div class="thumbnail col-lg-3 index_thumbnail">
		       <%= link_to article_path(article.id) do %>
		        <%= image_tag article.image, class: "img", :alt => 'Lights', :width => '100%' %>
			       <% end %>
                <div class="caption">
                  <p class="index-title"> 
                   <%= link_to article.title, article_path(article.id), class: "index-title vh"%>
                  </p>
		              <div class="index-sub-title">
                    <button class="btn warning"><%= link_to "さらに表示", article_path(article.id), class: "index-sub-title" %></button>
                    <i class="fa fa-heart"></i>
                    <%= article.likes.count %>
                  </div> 
                </div>
          </div>
      <% end %>
  </div>
 </div>

<div class="paginate col-md-12"><%= paginate @articles %></div>
  
